<?xml version="1.0" encoding="UTF-8"?>

<?language javascript?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" onMouseEntered="controller.init(buttonViewFile, labelViewFile)">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
            <children>
                <Button mnemonicParsing="false" text="Seleccionar Archivo"
                        onAction="controller.fileChooser(labelFileName)"/>
                <Label fx:id="labelFileName" prefHeight="17.0" prefWidth="278.0" text="Label" textAlignment="CENTER"/>
            </children>
        </VBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
            <fx:define>
                <ToggleGroup fx:id="cryptoRadioButtonGroup"/>
            </fx:define>

            <children>
                <VBox alignment="CENTER" prefHeight="133.0" prefWidth="136.0">
                    <children>
                        <Label text="Simétricos"/>
                        <RadioButton toggleGroup="$cryptoRadioButtonGroup" mnemonicParsing="false" text="3DES"/>
                        <RadioButton toggleGroup="$cryptoRadioButtonGroup" mnemonicParsing="false" text="RadioButton"/>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="133.0" prefWidth="136.0">
                    <children>
                        <Label text="Asimétricos"/>
                        <RadioButton toggleGroup="$cryptoRadioButtonGroup" mnemonicParsing="false" text="ECC" textAlignment="CENTER"/>
                        <RadioButton toggleGroup="$cryptoRadioButtonGroup" mnemonicParsing="false" text="RadioButton"/>
                    </children>
                </VBox>
            </children>
        </HBox>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="2">
            <children>
                <Button mnemonicParsing="false" text="Enviar archivo" onAction="controller.sendFile(labelInfo)"/>
                <Label fx:id="labelInfo" prefHeight="17.0" prefWidth="298.0"/>
            </children>
        </VBox>
        <GridPane alignment="CENTER" GridPane.columnIndex="1" GridPane.rowSpan="3" fx:id="gridFiles">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="buttonViewFile" mnemonicParsing="false" text="Ver archivo" GridPane.columnIndex="1"/>
                <Label fx:id="labelViewFile" prefHeight="17.0" prefWidth="140.0" text="" wrapText="true"/>
            </children>
        </GridPane>
    </children>
</GridPane>
